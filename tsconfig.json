{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "module": "ES2020",
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "dist",
    "skipLibCheck": true,
    "allowJs": false,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["."]
}
